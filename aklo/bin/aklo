# Dispatch principal
case "${1:-help}" in
  "plan")
    shift
    command_plan "$@"
    ;;
  "release")
    shift
    command_release "$@"
    ;;
  "status")
    shift
    command_status "$@"
    ;;
  "mcp")
    shift
    command_mcp "$@"
    ;;
  "validate")
    shift
    command_validate "$@"
    ;;
  "template")
    shift
    command_template "$@"
    ;;
  "install-ux")
    shift
    command_install_ux "$@"
    ;;
  "propose-pbi"|"pbi")
    shift
    command_propose_pbi "$@"
    ;;
  "arch")
    shift
    command_arch "$@"
    ;;
  "dev")
    shift
    command_dev "$@"
    ;;
  "help"|"--help"|"-h")
    show_help
    ;;
  *)
    echo "Commande inconnue: $1"
    echo "Utilisez 'aklo help' pour voir les commandes disponibles."
    exit 1
    ;;
esac