#!/bin/bash
#==============================================================================
# Fonctions d'affichage sympa pour les dotfiles
# Am√©liore les sorties des fonctions shell avec couleurs et √©mojis
#==============================================================================

# Couleurs (√©viter la red√©claration si d√©j√† d√©finies)
if [[ -z "$C_RED" ]]; then
    readonly C_RED='\033[0;31m'
    readonly C_GREEN='\033[0;32m'
    readonly C_YELLOW='\033[1;33m'
    readonly C_BLUE='\033[0;34m'
    readonly C_PURPLE='\033[0;35m'
    readonly C_CYAN='\033[0;36m'
    readonly C_WHITE='\033[1;37m'
    readonly C_GRAY='\033[0;37m'
    readonly C_BOLD='\033[1m'
    readonly C_DIM='\033[2m'
    readonly C_RESET='\033[0m'
fi

# Fonctions d'affichage
print_success() {
    echo -e "${C_GREEN}‚úÖ $*${C_RESET}"
}

print_error() {
    echo -e "${C_RED}‚ùå $*${C_RESET}" >&2
}

print_warning() {
    echo -e "${C_YELLOW}‚ö†Ô∏è  $*${C_RESET}"
}

print_info() {
    echo -e "${C_BLUE}‚ÑπÔ∏è  $*${C_RESET}"
}

print_step() {
    echo -e "${C_CYAN}üîÑ $*${C_RESET}"
}

print_header() {
    echo -e "\n${C_BOLD}${C_BLUE}üìã $*${C_RESET}"
    echo -e "${C_GRAY}$(printf '%.0s‚îÄ' {1..50})${C_RESET}"
}

print_git() {
    echo -e "${C_PURPLE}üåø $*${C_RESET}"
}

print_branch() {
    echo -e "${C_YELLOW}üåø Branche: ${C_BOLD}$*${C_RESET}"
}

print_command() {
    echo -e "${C_DIM}$ $*${C_RESET}"
}

print_separator() {
    echo -e "${C_GRAY}$(printf '%.0s‚îÄ' {1..60})${C_RESET}"
}

# Fonction pour afficher le d√©but d'une op√©ration
start_operation() {
    echo -e "\n${C_BOLD}${C_CYAN}üöÄ $*${C_RESET}"
}

# Fonction pour afficher la fin d'une op√©ration
end_operation() {
    echo -e "${C_GREEN}‚ú® $* termin√© !${C_RESET}\n"
} 