#!/usr/bin/env bash

# ==============================================================================
#                 Fonctions Shell pour les alias Git
#
# Pour utiliser ce fichier, ajoutez la ligne suivante Ã  votre ~/.bashrc ou ~/.zshrc :
#
#   source ~/.git_functions
#
# ==============================================================================

# ==============================================================================
#                      Logs & Historique
# ==============================================================================

# Affiche les changements rÃ©alisÃ©s depuis le dernier pull
# Usage: git lc
git_log_since_last_pull() {
  # Utilise ORIG_HEAD, qui est une rÃ©fÃ©rence crÃ©Ã©e par git pull
  git log --pretty=oneline --abbrev-commit --graph ORIG_HEAD.. --stat --no-merges
}

# Affiche les commits qui n'ont pas encore Ã©tÃ© push vers le remote
# Usage: git ups
git_log_unpushed() {
  git log --branches --not --remotes --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)%Creset' --abbrev-commit
}

# Affiche une liste de tags formatÃ©e et triÃ©e par date
# Usage: git tags-l
git_list_tags_formatted() {
  # 1. 'git for-each-ref' rÃ©cupÃ¨re les tags avec un format personnalisÃ©
  #    Le sÃ©parateur "_,,,_" est utilisÃ© pour Ãªtre parsÃ© par awk de maniÃ¨re fiable.
  # 2. 'awk' formate ensuite la sortie en colonnes propres.
  git for-each-ref \
    --sort=taggerdate \
    --format '%(tag)_,,,_%(taggerdate:raw)_,,,_%(taggername)_,,,_%(subject)' refs/tags \
    | awk '
      BEGIN { 
        FS = "_,,,_"  
      }
      { 
        # Convertit le timestamp unix en date lisible
        t = strftime("%Y-%m-%d  %H:%M", $2); 
        # Imprime les colonnes formatÃ©es
        printf "%-20s %-18s %-25s %s\n", t, $1, $4, $3
      }'
}

# ==============================================================================
#                      Workflow & Sauvegardes
# ==============================================================================

# Ajoute tous les fichiers et crÃ©e un commit.
# FONCTION SUPPRIMÃ‰E : git_add_all_and_commit
# RemplacÃ©e par git_add_all_and_commit_super_enhanced dans .shell_functions_enhanced
# Accessible via 'gac' ou 'git gac'

# CrÃ©e un commit "SAVEPOINT" sans vÃ©rification des hooks
# Usage: git save
git_savepoint() {
  git add --all && git commit --no-verify -m 'SAVEPOINT'
}

# CrÃ©e un commit WIP (Work In Progress) avec un message
# Usage: git wip "mon message"
git_work_in_progress() {
  git add --all && git commit --no-verify -m "$@"
}

# CrÃ©e un point de sauvegarde temporaire, puis le supprime immÃ©diatement
# Utile pour rÃ©initialiser l'Ã©tat de la branche de maniÃ¨re "sÃ»re" via le reflog
# Usage: git wipe "message optionnel"
git_wipe_savepoint() {
  local message=${1:-"WIPE-SAVEPOINT"}
  git add --all && git commit --no-verify -q -m "$message" && git reset HEAD~1 --hard
}

# ==============================================================================
#                      Gestion des Branches & Synchronisation
# ==============================================================================

# DÃ©finit la branche amont (upstream) pour la branche actuelle sur 'origin'
# Usage: git su
git_set_upstream() {
  local current_branch
  current_branch=$(git rev-parse --abbrev-ref HEAD)
  if [[ -n "$current_branch" ]]; then
    git branch --set-upstream-to="origin/$current_branch"
  else
    echo "Erreur : Impossible de dÃ©terminer la branche actuelle." >&2
    return 1
  fi
}

# Synchronise la branche actuelle avec le remote (pull --rebase) et met Ã  jour les submodules
# Usage: git sync
git_branch_sync() {
    git pull --rebase=preserve --prune "$@" && git submodule update --init --recursive
}

# FONCTIONS SUPPRIMÃ‰ES : git_branch_start, git_branch_delete, git_branch_delete_force
# RemplacÃ©es par les versions super_enhanced dans .shell_functions_enhanced
# Accessibles via 'gbs', 'gbd' ou 'git gbs', 'git gbd'

# Lance un rebase interactif depuis le point de divergence avec la branche cible
# Usage: git b-squash [branche_cible]
git_branch_squash() {
    local target_branch=${1:-master}
    local fork_point
    fork_point=$(git merge-base --fork-point "$target_branch")

    if [[ -z "$fork_point" ]]; then
        echo "Erreur : Impossible de trouver un point de divergence avec la branche '$target_branch'." >&2
        echo "La branche est peut-Ãªtre dÃ©jÃ  Ã  jour ou n'a pas d'historique commun." >&2
        return 1
    fi

    echo "Lancement du rebase interactif depuis le commit $fork_point..."
    git rebase -i "$fork_point"
}

# ==============================================================================
#                      Nettoyage & Finalisation
# ==============================================================================

# Nettoie les branches locales qui ont dÃ©jÃ  Ã©tÃ© fusionnÃ©es dans la branche cible (master par dÃ©faut)
# Usage: git b-clean [branche_cible]
git_branch_clean() {
  local target_branch=${1:-master}
  git branch --merged "$target_branch" | grep -v -E "(^\*|${target_branch}$)" | xargs git branch --delete
}

# Routine complÃ¨te de fin de tÃ¢che : se place sur master, met Ã  jour, nettoie les branches et les dÃ©pendances
# Usage: git b-done [branche_cible]
git_branch_done() {
    local target_branch=${1:-master}
    git checkout "$target_branch" && git_branch_sync && git_branch_clean "$target_branch" && git_npm_clean
}

# Nettoie les dÃ©pendances NPM pour un environnement de production
# Usage: git n-clean
git_npm_clean() {
  if [[ -f "package.json" ]]; then
    npm install --no-package-lock --production && npm prune
  else
    echo "Pas de fichier package.json trouvÃ©, nettoyage npm ignorÃ©."
  fi
}

# ==============================================================================
#                      Pull Requests & Aide
# ==============================================================================

# RÃ©cupÃ¨re une Pull Request depuis GitHub, Bitbucket ou GitLab
# Usage: git pr <gh|bb|gl> <numÃ©ro_pr> [prÃ©fixe_branche]
git_pull_request() {
  local provider=$1
  local pr_number=$2
  local branch_prefix=${3:-pr}
  local remote_name
  local ref_path=""

  remote_name=$(git remote | grep ^upstream || echo origin)

  if [[ -z "$pr_number" ]]; then
    echo "Erreur : NumÃ©ro de Pull Request manquant." >&2
    return 1
  fi

  case "$provider" in
    gh) ref_path="refs/pull/$pr_number/head" ;;
    bb) ref_path="refs/pull-requests/$pr_number/head" ;;
    gl) ref_path="refs/merge-requests/$pr_number/head" ;;
    *) echo "Fournisseur non supportÃ© : $provider. Utilisez 'gh', 'bb', ou 'gl'." >&2; return 1 ;;
  esac

  git fetch -fu "$remote_name" "$ref_path:$branch_prefix/$pr_number" && git checkout "$branch_prefix/$pr_number"
}

# Affiche une aide-mÃ©moire formatÃ©e et lisible de tous les alias Git
# Usage: git aliases
git_display_help() {
  local C_CAT=$(printf '\033[1;34m')     # Bleu pour les catÃ©gories
  local C_ALIAS=$(printf '\033[1;33m')   # Jaune pour les alias
  local C_DESC=$(printf '\033[0;32m')    # Vert pour les descriptions
  local C_EXAMPLE=$(printf '\033[0;36m') # Cyan pour les exemples
  local C_RST=$(printf '\033[0m')        # Reset

  printf "\n%sğŸ”§ Git Aliases - Guide Interactif%s\n" "$C_CAT" "$C_RST"
  printf "%sâ•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•%s\n\n" "$C_CAT" "$C_RST"

  # === AIDE & INTROSPECTION ===
  printf "%sğŸ“‹ Aide & Introspection%s\n" "$C_CAT" "$C_RST"
  printf "%sâ”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€%s\n" "$C_CAT" "$C_RST"
  printf "  %saliases     %s %sAffiche cette aide-mÃ©moire formatÃ©e%s\n" "$C_ALIAS" "$C_RST" "$C_DESC" "$C_RST"
  printf "              %sExemple: %sgit aliases%s\n\n" "$C_EXAMPLE" "$C_EXAMPLE" "$C_RST"

  # === LOGS & HISTORIQUE ===
  printf "%sğŸ“Š Logs & Historique%s\n" "$C_CAT" "$C_RST"
  printf "%sâ”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€%s\n" "$C_CAT" "$C_RST"
  printf "  %slg          %s %sLog graphique et concis avec couleurs%s\n" "$C_ALIAS" "$C_RST" "$C_DESC" "$C_RST"
  printf "  %sll          %s %sLog graphique avec liste des fichiers modifiÃ©s%s\n" "$C_ALIAS" "$C_RST" "$C_DESC" "$C_RST"
  printf "  %soneline     %s %sLog sur une seule ligne%s\n" "$C_ALIAS" "$C_RST" "$C_DESC" "$C_RST"
  printf "  %slc          %s %sAffiche les changements depuis le dernier pull%s\n" "$C_ALIAS" "$C_RST" "$C_DESC" "$C_RST"
  printf "  %sups         %s %sAffiche les commits non pushÃ©s%s\n" "$C_ALIAS" "$C_RST" "$C_DESC" "$C_RST"
  printf "  %stags-l      %s %sListe les tags formatÃ©s et triÃ©s%s\n" "$C_ALIAS" "$C_RST" "$C_DESC" "$C_RST"
  printf "              %sExemples: %sgit lg | git ll | git lc%s\n\n" "$C_EXAMPLE" "$C_EXAMPLE" "$C_RST"

  # === WORKFLOW & SAUVEGARDES ===
  printf "%sğŸ’¾ Workflow & Sauvegardes Rapides%s\n" "$C_CAT" "$C_RST"
  printf "%sâ”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€%s\n" "$C_CAT" "$C_RST"
  printf "  %sgac         %s %sCommit intelligent avec messages automatiques%s\n" "$C_ALIAS" "$C_RST" "$C_DESC" "$C_RST"
  printf "  %ssave        %s %sCommit rapide 'SAVEPOINT' sans hooks%s\n" "$C_ALIAS" "$C_RST" "$C_DESC" "$C_RST"
