  printf "              %sExemples: %sgit save | git wip \"en cours\" | git undo%s\n\n" "$C_EXAMPLE" "$C_EXAMPLE" "$C_RST"

  # === GESTION DES BRANCHES ===
  printf "%sğŸŒ¿ Gestion des Branches%s\n" "$C_CAT" "$C_RST"
  printf "%sâ”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€%s\n" "$C_CAT" "$C_RST"
  printf "  %ssu          %s %sDÃ©finit la branche upstream pour la branche actuelle%s\n" "$C_ALIAS" "$C_RST" "$C_DESC" "$C_RST"
  printf "  %sb-name      %s %sAffiche le nom de la branche actuelle%s\n" "$C_ALIAS" "$C_RST" "$C_DESC" "$C_RST"
  printf "  %sgbs         %s %sCrÃ©ation de branche avec validation format%s\n" "$C_ALIAS" "$C_RST" "$C_DESC" "$C_RST"
  printf "  %sgbd         %s %sSuppression branche locale + distante%s\n" "$C_ALIAS" "$C_RST" "$C_DESC" "$C_RST"
