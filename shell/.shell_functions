  printf "  %ssync        %s %sMet Ã  jour la branche locale (pull --rebase)%s\n" "$C_ALIAS" "$C_RST" "$C_DESC" "$C_RST"
  printf "  %sb-clean     %s %sSupprime les branches locales dÃ©jÃ  mergÃ©es%s\n" "$C_ALIAS" "$C_RST" "$C_DESC" "$C_RST"
