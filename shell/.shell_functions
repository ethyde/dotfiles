  printf "  %sBranch:%s   %sb%s (branch) %sba%s (branch --all) %sbd%s (branch --delete)\n" "$C_DESC" "$C_RST" "$C_ALIAS" "$C_RST" "$C_ALIAS" "$C_RST" "$C_ALIAS" "$C_RST"
  printf "  %sCommit:%s   %sc%s (commit) %sca%s (commit --amend) %scaa%s (commit --all --amend)\n" "$C_DESC" "$C_RST" "$C_ALIAS" "$C_RST" "$C_ALIAS" "$C_RST" "$C_ALIAS" "$C_RST"
  printf "  %sCheckout:%s %sco%s (checkout) %scob%s (checkout -b)\n" "$C_DESC" "$C_RST" "$C_ALIAS" "$C_RST" "$C_ALIAS" "$C_RST"
  printf "  %sFetch:%s    %sf%s (fetch) %sfo%s (fetch origin) %sfu%s (fetch upstream)\n" "$C_DESC" "$C_RST" "$C_ALIAS" "$C_RST" "$C_ALIAS" "$C_RST" "$C_ALIAS" "$C_RST"
  printf "  %sMerge:%s    %sm%s (merge) %sma%s (merge --abort) %smc%s (merge --continue)\n" "$C_DESC" "$C_RST" "$C_ALIAS" "$C_RST" "$C_ALIAS" "$C_RST" "$C_ALIAS" "$C_RST"
  printf "  %sPull:%s     %spl%s (pull) %splo%s (pull origin) %splr%s (pull --rebase)\n" "$C_DESC" "$C_RST" "$C_ALIAS" "$C_RST" "$C_ALIAS" "$C_RST" "$C_ALIAS" "$C_RST"
  printf "  %sPush:%s     %sps%s (push) %spso%s (push origin)\n" "$C_DESC" "$C_RST" "$C_ALIAS" "$C_RST" "$C_ALIAS" "$C_RST"
  printf "  %sRebase:%s   %srb%s (rebase) %srbi%s (rebase -i) %srbc%s (rebase --continue)\n" "$C_DESC" "$C_RST" "$C_ALIAS" "$C_RST" "$C_ALIAS" "$C_RST" "$C_ALIAS" "$C_RST"
  printf "  %sStatus:%s   %ss%s (status)\n\n" "$C_DESC" "$C_RST" "$C_ALIAS" "$C_RST"

  # === COMMANDES SHELL AVANCÃ‰ES ===
  printf "%sğŸš€ Commandes Shell AvancÃ©es (avec couleurs et Ã©mojis)%s\n" "$C_CAT" "$C_RST"
  printf "%sâ”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€%s\n" "$C_CAT" "$C_RST"
  
  # VÃ©rifier si les fonctions enhanced sont disponibles
  local enhanced_available=false
  if [[ -f "$HOME/.shell_functions_enhanced" ]] || [[ -f "$HOME/.shell_functions_lazy" ]]; then
    enhanced_available=true
  fi
  
  if [[ "$enhanced_available" == "true" ]]; then
    printf "  %sgac         %s %sCommit avec messages automatiques et Ã©mojis%s\n" "$C_ALIAS" "$C_RST" "$C_DESC" "$C_RST"
    printf "  %sgbs         %s %sCrÃ©ation de branche avec validation format%s\n" "$C_ALIAS" "$C_RST" "$C_DESC" "$C_RST"
    printf "  %sgbd         %s %sSuppression branche locale + distante%s\n" "$C_ALIAS" "$C_RST" "$C_DESC" "$C_RST"
    printf "  %sgri         %s %sRebase interactif intelligent%s\n" "$C_ALIAS" "$C_RST" "$C_DESC" "$C_RST"
    printf "              %sExemples: %sgac \"fix login\" | gbs feat/PROJ-123/auth | gbd old-branch%s\n\n" "$C_EXAMPLE" "$C_EXAMPLE" "$C_RST"
  else
    printf "  %sâš ï¸  Commandes avancÃ©es non disponibles%s\n" "$C_DESC" "$C_RST"
    printf "  %sInstallez les dotfiles avec: %s./install%s\n\n" "$C_DESC" "$C_EXAMPLE" "$C_RST"
  fi

  # === USAGE & CONSEILS ===
  printf "%sğŸ’¡ Usage & Conseils%s\n" "$C_CAT" "$C_RST"
  printf "%sâ”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€%s\n" "$C_CAT" "$C_RST"
  printf "  â€¢ Utilisez %sgit <alias>%s ou directement %s<alias>%s (pour les commandes shell)\n" "$C_ALIAS" "$C_RST" "$C_ALIAS" "$C_RST"
  printf "  â€¢ Les commandes %sgac%s, %sgbs%s, %sgbd%s, %sgri%s sont plus avancÃ©es que leurs Ã©quivalents Git\n" "$C_ALIAS" "$C_RST" "$C_ALIAS" "$C_RST" "$C_ALIAS" "$C_RST" "$C_ALIAS" "$C_RST"
  printf "  â€¢ Format de branche recommandÃ©: %stype/JIRA-123/description%s\n" "$C_EXAMPLE" "$C_RST"
  printf "  â€¢ Workflow suggÃ©rÃ©: %sgbs%s â†’ %sgac%s â†’ %sgri%s â†’ %sgbd%s\n\n" "$C_ALIAS" "$C_RST" "$C_ALIAS" "$C_RST" "$C_ALIAS" "$C_RST" "$C_ALIAS" "$C_RST"
}

# ==============================================================================
#                      Gestion /etc/hosts
# ==============================================================================

removehost() {
    if [[ "$1" ]]; then
        local HOSTNAME=$1
        if [ -n "$(grep "$HOSTNAME" /etc/hosts)" ]; then
            echo "$HOSTNAME TrouvÃ© dans /etc/hosts, suppression..."
            sudo sed -i".bak" "/$HOSTNAME/d" /etc/hosts
        else
            echo "$HOSTNAME non trouvÃ© dans /etc/hosts"
        fi
    else
        echo "Erreur: paramÃ¨tre manquant. Usage: removehost <domaine>"
    fi
}

addhost() {
    if [[ "$1" && "$2" ]]; then
        local IP=$1
        local HOSTNAME=$2
        if [ -n "$(grep "$HOSTNAME" /etc/hosts)" ]; then
            echo "$HOSTNAME existe dÃ©jÃ :"
            grep "$HOSTNAME" /etc/hosts
        else
            echo "Ajout de $HOSTNAME dans /etc/hosts"
            printf "%s\t%s\n" "$IP" "$HOSTNAME" | sudo tee -a /etc/hosts > /dev/null
        fi
    else
        echo "Erreur: paramÃ¨tres manquants. Usage: addhost <ip> <domaine>"
    fi
}

# ==============================================================================
#                      Gestion de l'agent SSH
# ==============================================================================

# VÃ©rifie si l'agent est en cours d'exÃ©cution
agent_is_running() {
  if [ "$SSH_AUTH_SOCK" ]; then
    # ssh-add retourne 0 ou 1 si l'agent tourne (avec ou sans clÃ©s), 2 sinon
    ssh-add -l >/dev/null 2>&1 || [ $? -eq 1 ]
  else
    false
  fi
}

# VÃ©rifie si l'agent a des clÃ©s chargÃ©es
agent_has_keys() {
  ssh-add -l >/dev/null 2>&1
}

# Charge l'environnement de l'agent depuis le fichier
agent_load_env() {
  local env_file=~/.ssh/agent.env
  [ -f "$env_file" ] && . "$env_file" >/dev/null
}

# DÃ©marre un nouvel agent et sauvegarde son environnement
agent_start() {
  local env_file=~/.ssh/agent.env
  (umask 077; ssh-agent >"$env_file")
  . "$env_file" >/dev/null
}

# Ajoute toutes les clÃ©s SSH du type id_rsa_*
add_all_keys() {
  ls ~/.ssh | grep id_rsa_ | sed "s:^:`echo ~`/.ssh/:" | xargs -n 1 ssh-add
}

