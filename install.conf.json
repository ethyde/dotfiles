[
  {
    "defaults": {
      "link": {
        "relink": true
      }
    }
  },
  {
    "clean": [
      "~"
    ]
  },
  {
    "link": {
      "~/.gitconfig": "./git/.gitconfig",
      "~/.gitconfig.local": "./git/.gitconfig.local",
      "~/.gitignore_global": {
        "force": true,
        "path": "./git/.gitignore_global"
      },
      "~/.zshrc": {
        "force": true,
        "path": ".zshrc"
      },
      "~/.bashrc": "./shell/.bashrc",
      "~/.bash_profile": "./shell/.bash_profile",
      "~/.bash_alias": "./shell/.bash_alias",
      "~/.bash_profile.local": "./shell/.bash_profile.local",
      "~/.profile": "./shell/.profile"
    }
  },
  {
    "shell": [
      [
        "git submodule update --init --recursive",
        "Installing submodules"
      ]
    ]
  }
]