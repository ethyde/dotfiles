[
  {
    "defaults": {
      "link": {
        "relink": true
      }
    }
  },
  {
    "clean": ["~"]
  },
  {
    "link": {
      "~/.gitconfig": ".gitconfig",
      "~/.gitignore_global": {
        "force": true,
        "path": "./git/.gitignore_global"
      },
      "~/.zshrc": ".zshrc"
    }
  },
  {
    "shell": [
      ["git submodule update --init --recursive", "Installing submodules"]
    ]
  }
]
