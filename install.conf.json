[
  {
    "defaults": {
      "link": {
        "relink": true
      }
    }
  },
  {
    "clean": ["~"]
  },
  {
    "link": {
      "~/.gitconfig": ".gitconfig",
      "~/.gitignore_global": {
        "force": true,
        "path": "./git/.gitignore_global"
      },
      "~/.zshrc": {
        "force": true,
        "path": ".zshrc"
      },
      "~/.bashrc": ".bashrc",
      "~/.bash_profile": ".bash_profile",
      "~/.bash_alias": ".bash_alias"
    }
  },
  {
    "shell": [
      ["git submodule update --init --recursive", "Installing submodules"]
    ]
  }
]
