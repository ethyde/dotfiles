#!/usr/bin/env bash

set -e

CONFIG="install.conf.json"
DOTBOT_DIR="dotbot"

DOTBOT_BIN="bin/dotbot"
BASEDIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"

cd "${BASEDIR}"

# Corriger les permissions des scripts avant l'installation
echo "üîß Correction des permissions des scripts..."
if [ -f "${BASEDIR}/fix-permissions.sh" ]; then
    "${BASEDIR}/fix-permissions.sh" --fix > /dev/null 2>&1 || true
    echo "‚úÖ Permissions corrig√©es"
else
    echo "‚ö†Ô∏è  Script fix-permissions.sh non trouv√©, permissions non v√©rifi√©es"
fi

git submodule update --init --recursive "${DOTBOT_DIR}"

"${BASEDIR}/${DOTBOT_DIR}/${DOTBOT_BIN}" -d "${BASEDIR}" -c "${CONFIG}" "${@}"